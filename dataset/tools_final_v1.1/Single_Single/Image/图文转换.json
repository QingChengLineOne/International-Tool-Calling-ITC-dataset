                },
                {
                    "name": "background_color",
                    "type": "string",
                    "description": "背景颜色，格式为RGB值（例如：#FFFFFF）",
                    "default": "#FFFFFF"
                },
                {
                    "name": "image_type",
                    "type": "string",
                    "description": "输出图片格式，可选值：png, jpg",
